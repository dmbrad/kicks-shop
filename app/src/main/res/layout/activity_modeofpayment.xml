<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/money"
    tools:context=".Modeofpayment">


    <TextView
        android:textColor="#ECE2E2"

        android:id="@+id/textView27"
        android:textStyle="italic|bold"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUST CLICK THE MPESA IMAGE BELOW FOR PAYMENT" />

    <ImageView
        android:id="@+id/mImgMpesa"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/mpesa" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/phone" />

        <TextView
            android:id="@+id/mTvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:text="0111878093"
            android:textSize="30dp"
            android:textColor="#FF0000"
            android:textStyle="bold|italic" />

    </LinearLayout>
</LinearLayout>